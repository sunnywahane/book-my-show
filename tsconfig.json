{
    "extends": "@medly/typescript-config-react",
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@constants": ["constants"],
            "@constants/*": ["constants/*"],
            "@theme": ["theme"],
            "@theme/*": ["theme/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"],
            "@test-utils": ["utils/test-utils"],
            "@routes": ["routes"],
            "@routes/*": ["routes/*"],
            "@pages": ["pages"],
            "@pages/*": ["pages/*"],
            "@hooks": ["hooks"],
            "@hooks/*": ["hooks/*"]
        }
    },
    "include": ["src", "types"],
    "exclude": ["node_modules", "dist", "coverage"],
    "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
